@model SmartCarePatientPortal.Models.EmergencyContact

@{
    ViewData["Title"] = "Add Emergency Contact";
}

<h2>Add Emergency Contact</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Relationship"></label>
        <input asp-for="Relationship" class="form-control" />
        <span asp-validation-for="Relationship" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
