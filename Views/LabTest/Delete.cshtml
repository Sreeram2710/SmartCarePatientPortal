@model SmartCarePatientPortal.Models.LabTest

@{
    ViewData["Title"] = "Delete Lab Test";
}

<h2>Delete Lab Test</h2>

<div class="alert alert-warning">
    <strong>Warning:</strong> This action cannot be undone.
</div>

<div>
    <h4>Are you sure you want to delete this lab test?</h4>
    <dl class="row">
        <dt class="col-sm-2">Test Name</dt>
        <dd class="col-sm-10">@Model.TestName</dd>
        <dt class="col-sm-2">Comments</dt>
        <dd class="col-sm-10">@Model.Comments</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="LabTestId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
